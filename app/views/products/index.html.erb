<div class="container-fluid py-4">

<h1 class="mb-0">Artigos</h1>
</div>
<div class="container-fluid">
  
<div class="table-responsive table-index">
<table class="table table-bordered bg-white">
  <thead>
    <tr>
      <th>Identificador</th>
      <th>Tipo</th>
      <th>Côr</th>
      <th>Altura (cm)</th>
      <th>Largura (cm)</th>
      <th>Preço (cm)</th>
      <th>Quantidade em stock</th>
      <th>Fotografia</th>
      <th>Acções</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td> <%= product.product_code %> </td>
        <% if product.frame? %>
          <td>Moldura</td>
        <% elsif product.accessory? %>
          <td>Acessório</td>
        <% else %>
          <td>Passe-Partout</td>
        <% end %>
        <td><%= product.color %></td>
        <td><%= product.height %></td>
        <td><%= product.width %></td>
        <td>&euro; <%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= image_tag(product.image.url, height: 20, width: 20) if product.image.present? %></td>
        <!--<td><%#= link_to "Consultar", product.image.url, target: :blank if product.image.present? %></td>-->
         <td><%= link_to 'Consultar', product, class:"btn btn-primary btn-sm" %>
        <%= link_to 'Editar', edit_product_path(product), class:"btn btn-primary btn-sm" %>
        <%= link_to 'Apagar', product, method: :delete, class:"btn btn-warning btn-sm", data: { confirm: 'Deseja prosseguir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'Adicionar novo artigo', new_product_path, class:"btn btn-primary" %>
</div>
<div class="modal fade" id="enlargeImageModal" tabindex="-1" role="dialog" aria-labelledby="enlargeImageModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        </div>
        <div class="modal-body">
          <img src="" class="enlargeImageModalSource" style="width: 100%;">
        </div>
      </div>
    </div>
</div>